datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt      DateTime             @default(now())
  email          String?              @unique
  firstName      String?
  id             String               @id @default(cuid())
  isVerified     Boolean?
  lastName       String?
  password       String
  profilePicture Json?
  roles          Json
  rolesField     EnumUserRolesField?
  status         EnumUserStatus?
  statusField    EnumUserStatusField?
  updatedAt      DateTime             @updatedAt
  username       String               @unique
}

enum EnumUserRolesField {
  Option1
}

enum EnumUserStatus {
  Option1
}

enum EnumUserStatusField {
  Option1
}
